  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // Coordenadas
      const lat = 10.957778;
      const lng = -63.853611;

      // Inicializar el mapa centrado en las coordenadas
      const map = L.map('map').setView([lat, lng], 13);

      // Añadir una capa de mapa (usando OpenStreetMap)
      L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
        attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
      }).addTo(map);

      // Crear el marcador en las coordenadas
      const marker = L.marker([lat, lng]).addTo(map)
        .bindPopup('Ubicación: 10°57\'28"N 63°51\'13"W');

      // Abrir Google Maps al hacer clic en el marcador
      marker.on('click', function() {
        const googleMapsUrl = `https://www.google.com/maps?q=${lat},${lng}`;
        window.open(googleMapsUrl, '_blank');  // Abrir en una nueva pestaña
      });
    });
  </script>



